<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:context="com.example.nazi.practice.ListViewDemo.MiWokActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circleImageView"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_launcher_smile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:background="#1bfc07"/>
    <LinearLayout
        android:layout_marginStart="2dp"
        android:id="@+id/text_container"
        android:layout_toRightOf="@+id/circleImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f78c0a"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp">
        <TextView
            android:id="@+id/default_trans"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Default Language"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_weight="1"
            android:paddingTop="10dp"/>
        <TextView
            android:id="@+id/miwok_trans"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="MiWok Language"

            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>
